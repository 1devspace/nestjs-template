# ================================
# Server Configuration
# ================================
PORT=3001
NODE_ENV=development
API_URL=http://localhost:3001

# ================================
# Frontend Configuration
# ================================
# Comma-separated list of allowed origins for CORS
BASE_URL=http://localhost:3000,http://localhost:3001
FRONTEND_LOGIN_URL=http://localhost:3000/login

# ================================
# Database Configuration
# ================================
# MongoDB connection string (remove if not using MongoDB)
MONGODB_URI=mongodb://localhost:27017/your-database-name

# ================================
# Authentication (Clerk)
# ================================
# Remove these if not using Clerk authentication
CLERK_ISSUER=https://your-clerk-issuer.clerk.accounts.dev
CLERK_SECRET_KEY=your_clerk_secret_key
CLERK_JWT_KEY=your_clerk_jwt_key

# ================================
# Email Configuration
# ================================
# SMTP settings for sending emails (remove if not using email functionality)
EMAIL_HOST=smtp.gmail.com
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_SENDER=noreply@yourapp.com

# ================================
# Security Configuration
# ================================
# Enable Content Security Policy in production (optional)
ENABLE_CSP=false
